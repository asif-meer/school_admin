<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th align="center">Name</th>
            <th align="center">Short Name</th>
            <th align="center">Start Time</th>
            <th align="center">End Time</th>
            <th align="center">Duration</th>
            <th align="center">Actions</th>
          </tr>
        </thead>

        <tbody class="datables" >
          <% @periods.each do |period| %>
            <tr>
              <td><%= period.name %></td>
              <td><%= period.short %></td>
              <td><%= period.start_time.strftime("%I:%M %p") %></td>
              <td><%= period.end_time.strftime("%I:%M %p") %></td>
              <td><%= distance_of_time_in_words(period.start_time, period.end_time) %></td>
              <td>
                <%#= link_to 'Details', class_room, class: "btn btn-link" %>
                <%= link_to 'Edit', edit_period_path(period), class: "label label-primary edit_period", :style => "padding:3px;", remote: true %>
                <%= link_to 'Destroy', period, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "label label-danger delete_period", :style => "padding:3px;" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>