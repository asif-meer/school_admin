<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th class="">Mark All <input type="checkbox" id="select_all"/></th>
            <th align="center">Name</th>
            <th align="center">Short Name</th>
            <th align="center">Start Time</th>
            <th align="center">End Time</th>
            <th align="center">Duration</th>
            <th align="center" colspan="2">Actions</th>
          </tr>
        </thead>

        <tbody class="datables" >
          <% @periods.each do |period| %>
            <tr>
              <td class="selectedId"><%= check_box_tag "period_destroy_id[]", period.id %></td>
              <td><%= period.name %></td>
              <td><%= period.short %></td>
              <td><%= period.start_time.strftime("%I:%M %p") %></td>
              <td><%= period.end_time.strftime("%I:%M %p") %></td>
              <td><%= distance_of_time_in_words(period.start_time, period.end_time) %></td>
              <td>
                <%= link_to edit_period_path(period) do %>
                  <span class="glyphicon glyphicon-edit"></span>
                <% end %>
              </td>
              <td>
                <%= link_to period, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "delete_period" do %>
                  <span class="glyphicon glyphicon-trash"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>