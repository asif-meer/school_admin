<fieldset>
  <%= simple_form_for(@period, label_errors: true, remote: true) do |f| %>
    <%#= f.error_notification %>
    <%= yield f %>
    <div class="form-inputs">
      <%= f.input :name, input_html: {class: "form-control"}, autofocus: true, placeholder: "Name" %>
    </div>


    <div class="form-inputs">
      <%= f.input :short, input_html: {class: "form-control"}, placeholder: "Short Name" %>
    </div>

    <div class="form-inputs">
      <%= f.input :start_time, input_html: {class: "form-control"}, placeholder: "Start Time", :data => {'date-format' => 'YYYY/MM/DD'}, as: :string %>
    </div>

    <div class="form-inputs">
      <%= f.input :end_time, input_html: {class: "form-control"}, placeholder: "End Time", :data => {'date-format' => 'YYYY/MM/DD'}, as: :string %>
    </div>

    <div class="form-group"></div>

    <div class="form-actions">
      <%= f.submit "Create", class: "btn btn-primary pull-right" %>
    </div>
    
    <div class="form-group"></div>
      
  <% end %>
</fieldset>
