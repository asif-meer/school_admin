<%= simple_form_for(@period, url: create_periods_path(@subject, week_day.name), label_errors: true, html: {:id => "new_period_for_"+week_day.name, :method => :post}) do |f| %>
  <%#= f.error_notification %>
  <%#= yield f %>
  <div class="form-inputs">
    <%= f.input :level, collection: 1..8, :input_html => {class: "form-control"}, prompt: "Select Priority", label: "Priority"  %>
  </div>
  <div class="form-inputs">
    <%= f.input :teacher_id, collection: Employee.teachers.map{|m| [m.to_s, m.id]}, :input_html => {class: "form-control"}, prompt: "Select Teacher"  %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.input :school_class_id, collection: SchoolClass.all.map{|m| [m.class_name, m.id]}, :input_html => {class: "form-control"}, prompt: "Select Classes"  %>
  </div>
  
  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.submit "Create", class: "btn btn-primary" %> 
  </div>
  
  <div class="form-group"></div>
<% end %>