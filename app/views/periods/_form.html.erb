<%= simple_form_for(@period, url: create_period_path(@subject), label_errors: true) do |f| %>
  <%#= f.error_notification %>
  <%#= yield f %>
  <div class="form-inputs">
    <%= f.input :teacher_id, collection: Employee.teachers.map{|m| [m.to_s, m.id]}, :input_html => {class: "form-control"}, prompt: "Select Teacher"  %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.input :school_class_id, collection: SchoolClass.all.map{|m| [m.class_name, m.id]}, :input_html => {class: "form-control"}, prompt: "Select Classes"  %>
  </div>
  <div class="form-group"></div>
  <div class="form-inputs">
    <% if @period.week_days.blank? %>
      <%= f.input :week_days, collection: Period::WEEK_DAYS, :input_html => {class: "form-control", :multiple => true}, prompt: "Select Week Days"  %>
    <% else %>
      <% week_days_values = @period.week_days.split(",") %>
      <%= f.input :week_days, collection: Period::WEEK_DAYS, :selected => week_days_values, :input_html => {class: "form-control", :multiple => true}, prompt: "Select Week Days"  %>
    <% end %>
    
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.submit "Create", class: "btn btn-primary" %> 
  </div>
  
  <div class="form-group"></div>
<% end %>


