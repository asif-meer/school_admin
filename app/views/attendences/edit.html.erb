
<h3><%= @employee %> Attendence</h3>
<%= simple_form_for @employee, url: emp_attendence_update_path, method: :post do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <div class="form-group"></div>
    <div class="form-inputs">
      <%= f.simple_fields_for :employee_attendences  do |p| %>
          
         <fieldset>
          <div class="form-group"></div>
          <div class="form-inputs">
            <%= p.text_field :date, class: "form-control", placeholder: "dd/mm/yy"%>
          </div>

          <div class="form-group"></div>
          <div class="form-inputs">
            <%= p.text_field :label, class: "form-control", placeholder: "Status" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= f.button :submit, "Mark", class: "btn btn-info" %>
  </div>
<% end %>
