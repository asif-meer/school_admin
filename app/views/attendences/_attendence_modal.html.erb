<div class="modal fade bs-example-modal-sm" id="attendence_modal_<%= i.to_s %>_<%= emp.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><h3> Mark Attendance </h3></h4>
      </div>
      <%= simple_form_for @employee, url: update_attendence_path(emp), method: :post do |f| %>
        <div class="modal-body">
          <%#= f.error_notification %>
          <div class="form-group"></div>
          <div class="form-inputs">
            <%= f.simple_fields_for :employee_attendences do |p| %>
                
               <fieldset>
                <div class="form-group"></div>
                <div class="form-inputs">
                  <%= p.text_field :date, class: "form-control", placeholder: "dd/mm/yy", :value => ''+i.to_s %>
                </div>

                <div class="form-group"></div>
                <div class="form-inputs">
                  <%= p.input :label, input_html: {class: "form-control"}, placeholder: "Status" %>
                </div>
              </fieldset>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.button :submit, "Mark", class: "btn btn-app" %>
        </div>
      <% end %>
    </div>
  </div>
</div>