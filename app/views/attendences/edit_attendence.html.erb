<%= @employee %> Attendence

<%= simple_form_for @employee_attendence, url: update_attendence_path, method: :post do |f| %>
 <fieldset>
    <div class="form-group"></div>
    <div class="form-inputs">
      <%= f.text_field :date, class: "form-control", placeholder: "dd/mm/yy"%>
    </div>
    <div class="form-group"></div>
    <div class="form-inputs">
      <%= f.input :label, input_html: {class: "form-control"}, placeholder: "Status" %>
    </div>
    <div class="form-group"></div>
    <div class="form-inputs">
      <%= f.button :submit, "Mark", class: "btn btn-app" %>
    </div>
  </fieldset>
<% end %>


