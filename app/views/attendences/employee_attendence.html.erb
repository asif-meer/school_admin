<h1>Attendence</h1>


<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover" style="font-size: 11px;">
        <thead >
          <tr>
            <th>Employees</th>
            <% (Date.today.beginning_of_month..Date.today.end_of_month).each do |i| %>
              <th><%= i.strftime("%d") %></th>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |emp| %>
            <tr>
              <td><%= emp.to_s %></td>
              <% (Date.today.beginning_of_month..Date.today.end_of_month).each do |i, m| %>
                <td>
                  <%= link_to "#{emp.check_attendence?(i.to_s)}", emp_attendence_edit_path(emp,:dated => i.to_s), id: "#{i.to_s}" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

