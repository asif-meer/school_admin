<fieldset>
  <%= simple_form_for(@school_class, label_errors: true) do |f| %>
    <%#= f.error_notification %>
    <%= yield f %>
    <div class="form-inputs">
      <%= f.input :class_name, input_html: {class: "form-control"}, autofocus: true, placeholder: "Classroom Name" %>
    </div>


    <div class="form-inputs">
      <%= f.input :short_name, input_html: {class: "form-control"}, placeholder: "Short Name" %>
    </div>

    <div class="form-inputs">
      <%= f.input :color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap}}} %>
    </div>

    <div class="form-inputs">
      <%#= f.label "Class Teachers" %>
      <% teacher = EmployeePosition.joins(:employees).where(:id => [2, 7]) %>
      <%#= f.grouped_collection_select(:employee_id, teacher, :employees, :name, :id, :to_s, { :prompt => "--Select an Employee--"}, {class: "form-control"}) %>
    </div>

    <div class="form-group"></div>

    <div class="form-actions">
      <%= f.submit "Create", class: "btn btn-primary pull-right" %>
    </div>
    
    <div class="form-group"></div>
      
  <% end %>
</fieldset>
