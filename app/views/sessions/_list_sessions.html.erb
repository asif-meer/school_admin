<% if @sessions.present? %>
  <table class= "table table-striped table-bordered table-hover ">
    <thead >
      <tr>
        <th class="col-sm-2">Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th align="center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @sessions.each do |session| %>
        <tr>
          <td><%= session.name %></td>
          <td><%= session.start_date %></td>
          <td><%= session.end_date %></td>
          <td>
          <%= link_to 'View Details', session, class: "label label-info" %>
          <%= link_to 'Edit', edit_session_path(session), class: "label label-primary" %>
          <%= link_to 'Destroy',  session , method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "label label-danger delete_session" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-dismissable alert-info" style="margin:0px !important;">
    <strong>No Sessions!</strong> Available.
  </div>
<% end %>