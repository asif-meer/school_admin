<%= link_to 'New Session', new_session_path, class: "btn btn-success" %>
<div class="row">&nbsp;</div>
<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th class="col-sm-2">Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th colspan="3" align="center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @sessions.each do |session| %>
            <tr>
              <td><%= session.name %></td>
              <td><%= session.start_date %></td>
              <td><%= session.end_date %></td>
              <td><%= link_to 'View Details', session, class: "btn btn-link" %></td>
              <td><%= link_to 'Edit', edit_session_path(session), class: "btn btn-link" %></td>
              <td><%= link_to 'Destroy',  session , method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-link delete_session" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>