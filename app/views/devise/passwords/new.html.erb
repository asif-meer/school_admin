
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <div class="row">
      <div class="col-sm-5">
        <h3>Forgot your password?</h3>
        <p>We'll send password reset instructions.</p>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          
            <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "Email Address" %>
        </div>
         <%= f.submit 'Reset Password', :class => 'btn btn-info right' %>
       </div>
     </div>
  <% end %>
  <br />
  <%= link_to "Back to Login", new_user_session_path %>

