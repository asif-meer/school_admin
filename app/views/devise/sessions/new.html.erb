<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => "login-form"}) do |f| %>

  <%#= f.alert_message "Please fix the errors below." %>
  <div class="container" style="margin-top:40px">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Sign to Continue...</h3>
          </div>
          <div class="panel-body">
            <form role="form" action="#" method="POST">
              
                <div class="row">
                  <!-- <div id="center-image">
                    <%#= image_tag("authenticate.png", class: "profile-img") %>
                    <img class="profile-img" src="assets/authenticate.png" alt="">
                    <p style="text-align:center;"><b>Admin</b></p>
                  </div> -->
                </div>
                <div class="row">
                  <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <span class="glyphicon glyphicon-user"></span>
                        </span>
                        <%= f.email_field :email, class: 'form-control', :autofocus => true, placeholder: "Email Address", :label => false, value: "user@example.com" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <span class="glyphicon glyphicon-lock"></span>
                        </span>
                        <%= f.password_field :password, placeholder: "Password", class: 'form-control', :label => false, value: "admin123" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <% if devise_mapping.rememberable? -%>
                        <div class="checkbox">
                          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                        </div>
                      <% end -%>
                    </div>
                    <div class="form-group">
                      <%= f.submit 'Sign in', :class => 'btn btn-lg btn-warning btn-block' %>
                    </div>
                  </div>
                </div>
             
            </form>
          </div>
          <!-- <div class="panel-footer ">
            Forget your password? 
            <%#- if devise_mapping.recoverable? %>
              <%#= link_to ("<u>Click Here!</u>").html_safe, new_password_path(resource_name) %>
            <%# end -%>
          </div> -->
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(function() {
    $('#new_user').bootstrapValidator({
      framework: 'bootstrap',
      feedbackIcons: {
        valid: 'glyphicon glyphicon-ok',
        invalid: 'glyphicon glyphicon-remove',
        validating: 'glyphicon glyphicon-refresh'
      },
      fields: {
        'user[email]': {
          validators: {
              notEmpty: {
                  message: 'The email address is required and cannot be empty'
              },
              emailAddress: {
                  message: 'The email address is not a valid'
              }
          }
        },
        'user[password]': {
          validators: {
              notEmpty: {
                  message: 'The password is required and cannot be empty'
              },
              different: {
                  field: 'username',
                  message: 'The password cannot be the same as username'
              },
              stringLength: {
                  min: 8,
                  message: 'The password must have at least 8 characters'
              }
          }
        }
      }
    })
  });
</script>