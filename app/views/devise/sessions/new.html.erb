<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-app">
        <div class="panel-heading">
          <img style="position: absolute; top: 114px; right: 150px; border: 0; z-index: 1040;height: 97px;" src="https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67" alt="" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png">
          <h3>Sign in</h3>
        </div>
        <div class="panel-body">
          <%= devise_error_messages! %>
          <div class="row">&nbsp;</div>
          <div class='row'>
            <div class="col-md-1">
              <%= f.label :email %>
            </div>
            <div class="col-md-4">
              <%#- if devise_mapping.registerable? %>
                <%#= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
              <%# end -%>
            
            <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "Email Address" %>
            </div>
          </div>
          <div class="form-group"> </div>
          <div class='row'>
            <div class="col-md-1">
              <%= f.label :password %>
            </div>
            <div class="col-md-4">
              <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
            </div>
          </div>
          <div class="form-group"> </div>
          <div class='row'>
            <div class="col-md-4 col-md-offset-1">
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                </div>
              <% end -%>
            </div>
          </div>
          <div class="form-group"></div>
          <div class='row'>
            <div class="col-md-1 col-md-offset-1">
              <%= f.submit 'Sign in', :class => 'btn btn-app' %>
            </div>
            <div class="col-md-2">
              <%- if devise_mapping.recoverable? %>
                <%= link_to ("<u>Forgot password??</u>").html_safe, new_password_path(resource_name) %>
              <% end -%>
            </div>
          </div>
          <div class="form-group"> </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

