<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :course_name, input_html: {class: "form-control"}, autofocus: true, placeholder: "Course Name" %>
  </div>


  <div class="form-inputs">
    <%= f.input :section_name, input_html: {class: "form-control"}, placeholder: "Section Name" %>
  </div>

  <div class="form-inputs">
    <%= f.input :code, input_html: {class: "form-control"}, placeholder: "Code" %>
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
  </div>
  
  <div class="form-group"></div>
    
<% end %>
