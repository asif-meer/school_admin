<fieldset>
  <%= bootstrap_form_for(@course, label_errors: true) do |f| %>
    <%#= f.error_notification %>
    <%= yield f %>
    <div class="form-inputs">
      <%= f.text_field :course_name,class: "form-control", autofocus: true, placeholder: "Course Name" %>
    </div>


    <div class="form-inputs">
      <%= f.text_field :section_name, class: "form-control", placeholder: "Section Name" %>
    </div>

    <div class="form-inputs">
      <%= f.text_field :code, class: "form-control", placeholder: "Code" %>
    </div>

    <div class="form-group"></div>

    <div class="form-actions">
      <%= f.submit "Create", class: "btn btn-primary btn-lg" %>
    </div>
    
    <div class="form-group"></div>
      
  <% end %>
</fieldset>
