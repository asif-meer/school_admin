<%= form_tag destroy_multiple_courses_path, method: :delete do %>
  <h1>
    Courses
    <div class="pull-right">
      <span id="select_notice" style="font-size:13px;"></span>
      <%= button_tag "Delete selected", :remote => true, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm  destroy-all" %>
    </div>
  </h1>
  <%= link_to 'New Course', new_course_path, class: "btn btn-success" %>
  <div class="row">&nbsp;</div>
  <div class="row">
    <div class="col-sm-12">
      <div class="table-responsive">
        <table class= "table table-striped table-bordered table-hover ">
          <thead >
            <tr>
              <th class="">Mark All <input type="checkbox" id="select_all"/></th>
              <th class="col-sm-2">Name</th>
              <th>Section</th>
              <th>Code</th>
              <th colspan="3" align="center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td id="checkArray"><%= check_box_tag "course_destroy_id[]", course.id %></td>
                <td><%= course.course_name %></td>
                <td><%= course.section_name %></td>
                <td><%= course.code %></td>
                <td>
                  <%= link_to course do %>
                    <span class="glyphicon glyphicon-eye-open"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_course_path(course) do %>
                    <span class="glyphicon glyphicon-edit"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to course, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "delete_course" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<br>


