<div class="row">
  <div class="col-md-12">
    <div id="no-more-tables">
        <table class="table table-striped table-condensed cf">
          <thead class="cf">
            <tr>
              <th class="col-md-2" data-title="Mark all">Mark All <input type="checkbox" id="select_all"/></th>
              <th>Classrooms</th>
              <th>Short Name</th>
              <th>Shared</th>
              <th>Color</th>
              <th align="center" colspan="2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <th class="for_responsive_table">Mark All <input type="checkbox" id="select_all"/></th>
            <% @classrooms.each do |class_room| %>
              <tr>
                <td data-title="Mark" class="selectedId"><%= check_box_tag "classroom_destroy_id[]", class_room.id %></td>
                <td data-title="Classrooms"><%= class_room.classroom_name %></td>
                <td data-title="Short Name"><%= class_room.short_name %></td>
                <td data-title="Shared"><%= class_room.shared ? "Yes" : "No" %></td>
                <td data-title="Color">
                  <span style="padding: 4px 53px 4px 0px;background-color: <%=class_room.color%>;"></span>
                </td>
                <td>
                  <%= link_to edit_classroom_path(class_room) do %>
                    <span class="glyphicon glyphicon-edit"></span>
                  <% end %> |
                  <%= link_to class_room, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "delete_classroom" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
                
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">
    <p class="bg-success" style="padding:10px;margin-top:20px"><small><a href="http://elvery.net/demo/responsive-tables/#no-more-tables" target="_blank">Link</a> to original article</small></p>
</div>
