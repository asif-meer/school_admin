<%= form_tag destroy_multiple_subject_allocations_path, method: :delete do %>
  <h1>
    Allocated Subjects
    <div class="pull-right">
      <span id="select_notice" style="font-size:13px;"></span>
      <%= button_tag "Delete selected", :remote => true, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger destroy-all" %>
    </div>
  </h1>

  <div class="row">
    <div class="col-sm-12">
      <div class="table-responsive">
        <table class= "table table-striped table-bordered table-hover ">
          <thead >
            <tr>
              <th class="">Mark All <input type="checkbox" id="select_all"/></th>
              <th class="col-sm-2">Department</th>
              <th>Employee</th>
              <th colspan="3" align="center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @subject_allocations.each do |subject_allocation| %>
              <tr>
                <td id="checkArray"><%= check_box_tag "subject_allocation_destroy_id[]", subject_allocation.id %></td>
                <td><%= subject_allocation.department %></td>
                <td><%= subject_allocation.employee %></td>
                <td><%= link_to 'View Details', subject_allocation, class: "btn btn-link" %></td>
                <td><%= link_to 'Edit', edit_subject_allocation_path(subject_allocation), class: "btn btn-link" %></td>
                <td><%= link_to 'Destroy', subject_allocation, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-link destroy_subject_allocation" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<br>

<%= link_to 'New Subject allocation', new_subject_allocation_path, class: "btn btn-default btn-lg" %>


