<%= simple_form_for(@subject_allocation) do |f| %>
  <%= f.error_notification %>
  <%= yield f %>
  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :department_id %>
    <%= select("subject_allocation", "department_id", Department.all.map{|m| [m.name, m.id]}, { :prompt => "--Select a Department--"}, {class: "form-control"}) %>
  </div>
  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :employee_id %>
    <div class="departments"> 
      <%= render :partial => 'employees_all', :f => p %>
    </div> 
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :course_id %>
    <%= select("subject_allocation", "course_id", Course.all.map{|m| [m.course_name, m.id]}, { :prompt => "--Select a Course--"}, {class: "form-control"}) %>
  </div>
  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :batch_id %>
    <div class="batches"> 
      <%= render :partial => 'batches_all', :f => p %>
    </div> 
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :subject_id %>
    <div class="subjects"> 
      <%= render :partial => 'subjects_all', :f => p %>
    </div> 
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  
  <div class="form-group"></div>
    
<% end %>
