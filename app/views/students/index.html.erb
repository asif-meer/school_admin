<h1>Students</h1>


<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th class="col-sm-2">First name</th>
            <th>Last Name</th>
            <th>Nic</th>
            <th>Birth Date</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Name</th>
            <th>Relationship</th>
            <th colspan="3" align="center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.nic %></td>
              <td><%= student.date_of_birth.strftime("%d/%b/%Y") %></td>
              <td><%= student.address %></td>
              <td><%= student.gender %></td>
              <td><%= student.emergency_contacts.map(&:phone).join(", ") %></td>
              <td><%= student.emergency_contacts.map(&:name).join(", ") %></td>
              <td><%= student.emergency_contacts.map(&:relationship).join(", ") %></td>
              <td><%= link_to 'Show', student_path(student) %></td>
              <td><%= link_to 'Edit', edit_student_path(student) %></td>
              <td><%#= link_to 'Destroy', delete_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Admission', new_admission_path, class: "btn btn-app" %>
