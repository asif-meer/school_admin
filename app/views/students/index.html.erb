<h1>
  Students
  <%= link_to 'New Student', new_admission_path, class: "btn btn-default pull-right" %>
</h1>
<br />
<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table id="students_datatable" class= "table table-striped table-bordered table-hover ">
        <thead>
          <tr>
            <th>Joining Date</th>
            <th>Roll No.</th>
            <th>First name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Course</th>
            <th>Batch</th>
            <th>Gender</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="datables">
          <% @students.each do |student| %>
            <tr>
              <td><%= student.joining_date.strftime("%d/%b/%Y") %></td>
              <td><%= student.roll_number %></td>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.date_of_birth.strftime("%d/%b/%Y") %></td>
              <td><%= student.course unless student.course.blank? %></td>
              <td><%= student.batch unless student.batch.blank? %></td>
              <td><%= student.gender %></td>
              <td>
                <%= link_to 'Details', student_path(student), class: "btn btn-link" %> |
                <%= link_to 'Edit', edit_student_path(student), class: "btn btn-link" %> |
                <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>


