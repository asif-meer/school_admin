$('.destroy_teacher_class').bind('ajax:success', function() {
    $("#notice").html("<%= escape_javascript(render :partial => 'layouts/messages' , :locals => { :flash => flash }).html_safe %>")
    $(this).closest("#update_assigned_classes").html("<%= escape_javascript(render partial: 'assigned_classes', :locals => { :@teacher => @class_teacher.teacher }).html_safe %>")
    $("#update_assigning_classes").html("<%= escape_javascript(render partial: 'assigning_classes', :locals => { :@teacher => @class_teacher.teacher }).html_safe %>")
    $(this).ajaxStart($.blockUI({  message: $(this).html("<h2><span class='glyphicon glyphicon-refresh glyphicon-refresh-animate'></span> Loading...</h2>"),css: { 
            border: 'none', 
            padding: '15px', 
            backgroundColor: '#000', 
            '-webkit-border-radius': '10px', 
            '-moz-border-radius': '10px', 
            opacity: .5, 
            color: '#fff',
            'margin-left': '73px',
            width: '17%' 
        } }));
    setTimeout($.unblockUI, 500);
    
}); 