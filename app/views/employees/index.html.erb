<h1>Employees</h1>
<%= link_to 'New Employee', new_employee_path, class: "btn btn-success" %>
<div class="row">&nbsp;</div>
<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table id="employees_datatable" class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Employee position</th>
            <th>Job title</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.first_name %></td>
              <td><%= employee.gender %></td>
              <td><%= employee.department.name  unless employee.department.nil? %></td>
              <td><%= employee.employee_position.name  unless employee.employee_position.nil? %></td>
              <td><%= employee.job_title %></td>
              <td class="dataTable_actions">
                <%= link_to 'Details', employee, class: "label label-info" %>
                <%= link_to 'Edit', edit_employee_path(employee), class: "label label-primary" %>
                <%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>


