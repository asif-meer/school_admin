<h1>Employees</h1>
<%= link_to 'New Employee', new_employee_path, class: "btn btn-success" %>
<div class="row">&nbsp;</div>
<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Gender</th>
            <th>Employee number</th>
            <th>Joining date</th>
            <th>Department</th>
            <th>Employee position</th>
            <th>Job title</th>
            <th colspan="3" align="center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.first_name %></td>
              <td><%= employee.last_name %></td>
              <td><%= employee.gender %></td>
              <td><%= employee.employee_number %></td>
              <td><%= employee.joining_date.strftime("%d/%b/%Y") %></td>
              <td><%= employee.department.name  unless employee.department.nil? %></td>
              <td><%= employee.employee_position.name  unless employee.employee_position.nil? %></td>
              <td><%= employee.job_title %></td>
              <td><%= link_to 'View Details', employee, class: "btn btn-link" %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-link" %></td>
              <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>


