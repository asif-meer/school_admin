<h1>Employees</h1>

<%= form_tag destroy_multiple_employees_path, method: :delete do %>
  <div class="row">
    <div class="col-sm-12">
      <div class="pull-left">
        <%= link_to 'New Employee', new_employee_path, class: "btn btn-success" %>
        <%= link_to 'New Teacher', new_teacher_employees_path(@teacher_position.name), class: "btn btn-success", data: { no_turbolink: true } %>
      </div>
      <div class="pull-right">
        <%= button_tag "Delete selected", :remote => true, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm destroy-all pull-right", id: "my" %><br />
        <span id="select_notice" style="font-size:13px;" class="pull-right"></span>
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-sm-12">
      <div class="table-responsive">
        <table id="employees_datatable" class= "table table-striped table-bordered table-hover ">
          <thead >
            <tr>
              <th>Mark All <input type="checkbox" id="select_all"/></th>
              <th>Name</th>
              <th>Gender</th>
              <th>Department</th>
              <th>Position</th>
              <th>Job title</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td class="selectedId"><%= check_box_tag "employee_destroy_id[]", employee.id %></td>
                <td><%= employee.first_name %></td>
                <td><%= employee.gender %></td>
                <td><%= employee.department.name  unless employee.department.nil? %></td>
                <td><%= employee.employee_position.name  unless employee.employee_position.nil? %></td>
                <td><%= employee.job_title %></td>
                <td class="dataTable_actions">
                  <%= link_to 'Details', employee, class: "label label-info" %>
                  <%= link_to 'Edit', edit_employee_path(employee), class: "label label-primary" %>
                  <%= link_to 'Destroy', employee, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "label label-danger delete_employee" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<div class="row">&nbsp;</div>


<br>


