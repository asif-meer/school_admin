<h1>Fees Periods</h1>


<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th class="col-sm-2">Fees Category</th>
            <th>Fees Particular</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Due Date</th>
            <th colspan="3" align="center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @fees_periods.each do |fees_period| %>
            <tr>
              <td><%= fees_period.fees_category.name unless fees_period.fees_category.blank? %></td>
              <td><%= fees_period.fees_particular.name unless fees_period.fees_particular.blank? %></td>
              <td><%= fees_period.start_date.strftime("%d %B, %Y") %></td>
              <td><%= fees_period.end_date.strftime("%d %B, %Y") %></td>
              <td><%= fees_period.due_date.strftime("%d %B, %Y") %></td>
              <td><%= link_to 'View Details', fees_period, class: "btn btn-link"%></td>
              <td><%= link_to 'Edit', edit_fees_period_path(fees_period), class: "btn btn-link" %></td>
              <td><%= link_to 'Destroy', fees_period, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Category', new_fees_period_path, class: "btn btn-default btn-lg" %>

