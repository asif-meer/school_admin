<%= simple_form_for(@fees_period) do |f| %>
  <%= f.error_notification %>
  <%= yield f %>
  <div class="form-inputs">
    <%= f.label :fees_category_id %>
    <%= select("fees_period", "fees_category_id", FeesCategory.all.map{|m| [m.name, m.id]}, { :prompt => "--Select a Fees Category--"}, {class: "form-control"}) %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :fees_particular_id %>
    <div class="fees-particulars"> 
      <%= render :partial => 'fees_particulars_all', :f => p %>
    </div>
  </div>
  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :start_date, required: true %>
    <%= f.text_field :start_date, class: "form-control", placeholder: "dd-mm-yy" %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :end_date, required: true %>
    <%= f.text_field :end_date, class: "form-control", placeholder: "dd-mm-yy" %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :due_date, required: true %>
    <%= f.text_field :due_date, class: "form-control", placeholder: "dd-mm-yy" %>
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %> 
  </div>
  
  <div class="form-group"></div>
<% end %>


