<h1>Subjects</h1>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Search Batches</h3>
      </div>
      <div class="panel-body">
        <%= form_tag list_subjects_path, :method => "get", id: "subjects_search_form" do %>
          <%= label_tag "Course Name" %>
          <%= select_tag :search_by_course_in_subjects, options_for_select(Course.all.collect{|m| [m.course_name, m.id]}, :selected => params[:search_by_course_in_subjects]), :class => 'form-control', prompt: "--Select Course--"  %>
          <%= label_tag "Batch Name" %>
          <div class="batches">
            <%= render :partial => "batches_all" %>
          </div>
          <%#= submit_tag "Search", :name => nil, :class => "btn btn-info btn-sm pull-right" %>
          <br />
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= form_tag destroy_multiple_subjects_path, method: :delete do %>
  <div class="row">
    <div class="col-sm-6 pull-right">
      <div class="pull-right">
        <span id="select_notice" style="font-size:13px;"></span>
        <%= button_tag "Delete selected", :remote => true, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm destroy-all" %>
      </div>
    </div>
  </div>
  <hr />


  <div class="row">
    <div class="col-sm-12">
      <div class="table-responsive">
        <div id="subjects_search">
          <%= render :partial => "subjects" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<br>

<%= link_to 'New Subject', new_subject_path, class: "btn btn-default btn-lg" %>


