<%= bootstrap_form_for(@subject, label_errors: true) do |f| %>
  <%#= f.error_notification %>
  <%= yield f %>
  <div class="form-inputs">
    <%#= f.label :course_id %>
    <%= f.select("course_id", Course.all.map{|m| [m.course_name, m.id]}, { :prompt => "--Select a Course--"}, {class: "form-control"}) %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%#= f.label :batch_id %>
    <div class="batches"> 
      <%= render :partial => '/subjects/partials/batches_all', :locals => {:f => f} %>
    </div>
  </div>
  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.text_field :subject_name, class: "form-control", placeholder: "Subject Name" %>
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.submit "Create", class: "btn btn-primary" %> 
  </div>
  
  <div class="form-group"></div>
<% end %>


