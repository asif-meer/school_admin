<%= simple_form_for(@subject, label_errors: true) do |f| %>
  <%#= f.error_notification %>
  <%= yield f %>
  <div class="form-inputs">
    <%#= f.label :course_id %>
    <%= f.input :title, :input_html => {class: "form-control"}, placeholder: "Subject Title" %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%#= f.label :batch_id %>
    <!-- <div class="batches"> 
      <%#= render :partial => '/subjects/partials/batches_all', :locals => {:f => f} %>
    </div> -->
    <%= f.input :short_name, :input_html => {class: "form-control"}, placeholder: "Short Name" %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.input :color, as: :minicolors, input_html: {data: {
        minicolors: {theme: :bootstrap}}} %>
  </div>

  <div class="form-group"></div>
  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to 'Cancel', list_subjects_path, class: "btn btn-default", style: "color:#8B7C7C;" %> 
  </div>
  
  <div class="form-group"></div>
<% end %>


