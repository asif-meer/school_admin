<table class="table table-bordered table-hover">
  <%= link_to "Remove Period", period_path(period), :method => :delete, class: "label label-danger pull-right destroy_period", data: {confirm: "Are you sure?"} %>
  <tr>
    <td class="col-md-3"><strong>Class: </strong></td>
    <td><%= period.school_class.class_name %></td>
  </tr>
  <tr>
    <td><strong>Teacher: </strong></td>
    <td><%= period.teacher.to_s %></td>
  </tr>
  <tr>
    <td><strong>Week Days: </strong></td>
    <td><%= period.week_day.name unless period.week_day.blank? %></td>
  </tr>
</table>