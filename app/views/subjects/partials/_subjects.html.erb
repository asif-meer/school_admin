<% if @subjects.present? %>
  <table class= "table table-striped">
    <thead >
      <tr>
        <th class="">Mark All <input type="checkbox" id="select_all"/></th>
        <th class="col-sm-2">Title</th>
        <th>Short Name</th>
        <th>Color</th>
        <th colspan="3" align="center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td class="selectedId"><%= check_box_tag "subject_destroy_id[]", subject.id %></td>
          <td><%= subject.title %></td>
          <td><%= subject.short_name %></td>
          <td>
            <span style="padding: 4px 53px 4px 0px;background-color: <%=subject.color%>;"></span>
          </td>
          <td>
            <%= link_to subject do %>
              <span class="glyphicon glyphicon-eye-open"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_subject_path(subject) do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
          </td>
          <td>
            <%= link_to subject, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "destroy_subject" do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-dismissable alert-info" style="margin:0px !important;">
    <strong>No Subjects!</strong> Available.
  </div>
<% end %>