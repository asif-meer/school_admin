<% if @subjects.present? %>
  <table class= "table table-striped table-bordered table-hover ">
    <thead >
      <tr>
        <th class="">Mark All <input type="checkbox" id="select_all"/></th>
        <th class="col-sm-2">Title</th>
        <th>Short Name</th>
        <th>Classrooms</th>
        <th>Color</th>
        <th>Assigned for</th>
        <th colspan="3" align="center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td class="selectedId"><%= check_box_tag "subject_destroy_id[]", subject.id %></td>
          <td><%= subject.title %></td>
          <td><%= subject.short_name %></td>
          <td><%= subject.classrooms.map(&:classroom_name).join(", ") %></td>
          <td>
            <span style="padding: 4px 53px 4px 0px;background-color: <%=subject.color%>;"></span>
          </td>
          <td><%= subject.periods.count %> periods</td>
          <td><%= link_to 'Details', subject, class: "label label-info" %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject), class: "label label-primary" %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "label label-danger destroy_subject" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-dismissable alert-info" style="margin:0px !important;">
    <strong>No Subjects!</strong> Available.
  </div>
<% end %>