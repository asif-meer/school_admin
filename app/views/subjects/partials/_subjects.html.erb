<% if @subjects.present? %>
  <table class= "table table-striped table-bordered table-hover ">
    <thead >
      <tr>
        <th class="">Mark All <input type="checkbox" id="select_all"/></th>
        <th class="col-sm-2">Batch</th>
        <th>Course</th>
        <th>Subject Name</th>
        <th colspan="3" align="center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td class="selectedId"><%= check_box_tag "subject_destroy_id[]", subject.id %></td>
          <td><%= subject.batch %></td>
          <td><%= subject.course %></td>
          <td><%= subject.subject_name %></td>
          <td><%= link_to 'View Details', subject, class: "btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-link destroy_subject" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-dismissable alert-info" style="margin:0px !important;">
    <strong>No Subjects!</strong> Available.
  </div>
<% end %>