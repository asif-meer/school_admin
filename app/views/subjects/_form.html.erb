<%= simple_form_for(@subject) do |f| %>
  <%= f.error_notification %>
  <%= yield f %>
  <div class="form-inputs">
    <%= f.label :course_id %>
    <%= select("subject", "course_id", Course.all.map{|m| [m.course_name, m.id]}, { :prompt => "--Select a Course--"}, {class: "form-control"}) %>
  </div>

  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.label :batch_id %>
    <div class="batches"> 
      <%= render :partial => 'batches_all', :f => p %>
    </div>
  </div>
  <div class="form-group"></div>
  <div class="form-inputs">
    <%= f.input :subject_name, input_html: {class: "form-control"}, placeholder: "Subject Name" %>
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %> 
  </div>
  
  <div class="form-group"></div>
<% end %>


