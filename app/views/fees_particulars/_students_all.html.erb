<% if @students %>
  <%= select("fees_particular", "roll_no", @students.map{|m| [m.roll_number, m.roll_number]}, { :prompt => "--Select a Student--"}, {class: "form-control"}) %>
<% elsif @students_edit %>
 <%= select("fees_particular", "roll_no", @students.map{|m| [m.roll_number, m.roll_number]}, { :prompt => "--Select a Student--"}, {class: "form-control"}) %>
<% else %>
  <%= select("fees_particular", "roll_no", [], { :prompt => "--Select a Batch--"}, {class: "form-control"}) %>
<% end %>