<%= simple_form_for(@user, url: school_update_path, :method => :post) do |f| %>
  <%= f.error_notification %>
  <legend><h2>Settings</h2></legend>
  <div class="row">
    <div class="col-sm-8">
      
      <fieldset>
        <div class="form-inputs">
          <%= f.simple_fields_for :school do |p| %>
            <%= p.input :school_name, input_html: {class: "form-control"}, autofocus: true, placeholder: "Name" %>
          <% end %>
        </div>
        <hr />
        <h3>Contact Info</h3>
        <div class="form-group"></div>
        <div class="form-inputs">
          <%= f.simple_fields_for :school do |p| %>
            <%= p.input :school_address, input_html: {class: "form-control"}, autofocus: true, placeholder: "Address" %>
          <% end %>
        </div>
        <div class="form-group"></div>
        <div class="form-inputs">
          <%= f.simple_fields_for :school do |p| %>
            <%= p.input :school_email, input_html: {class: "form-control"}, autofocus: true, placeholder: "Email" %>
          <% end %>
        </div>
        <div class="form-group"></div>
        <div class="form-inputs">
          <%= f.simple_fields_for :school do |p| %>
            <%= p.input :school_phone, input_html: {class: "form-control"}, autofocus: true, placeholder: "Phone" %>
          <% end %>
        </div>
      </fieldset>

      <div class="form-group"></div>

      <div class="form-actions">
        <%= f.submit "Update Settings", class: "btn btn-primary" %>
      </div>
      
      <div class="form-group"></div>
    </div>
  </div>
<% end %>


