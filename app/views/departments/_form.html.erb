<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-sm-5">
      
      <div class="form-inputs">
        <%= f.input :name, input_html: {class: "form-control"} %>
      </div>
      <div class="form-group"></div>
      
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-app" %>
      </div>
      
      <div class="form-group"></div>
    </div>
  </div>
<% end %>


