<table class="table table-hover table-condensed">
	<thead>
		<tr>
			<th>
				Week Days
			</th>
			<th>
				Period
			</th>
			<th>
				Subjects
			</th>
			<th>
				Teacher
			</th>
		</tr>
	</thead>
	<tbody>
		<% WeekDay.all.each do |week_day| %>
				<tr>
					<td>
						<%= week_day.name %>
					</td>
					<% if @class.lessons.where(:week_day_id => week_day).each do |class_lesson| %>
						<td class="success">
							<%= class_lesson.period.name %>
						</td>
						<td class="warning">
							<%= class_lesson.subject.short_name %>
						</td>
						<td class="danger">
							<%= class_lesson.teacher.to_s %>
						</td>
					<% end.empty? %>
						<td>--</td>
						<td>--</td>
						<td>--</td>
					<% end %>
				</tr>
		<% end %>
