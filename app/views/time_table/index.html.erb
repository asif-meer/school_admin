
<div class="row">
	<div class='col-md-12'>
		<h2>
			Time Table
		</h2>
		<div class="row">
			<div class="col-md-12 pull-right">
				<div class="panel panel-default">
					<div class="panel-body">
						<%= link_to "Allocate Subjects", time_table_allocate_subjects_path, class: "btn btn-success" %>
					</div>
				</div>
			</div>
		</div>
		<br />
		<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Generate Time Table</h3>
      </div>
      <div class="panel-body">
        <%= form_tag "#", method: "", id: "time_table_form" do %>
					<%= select_tag :search_class, options_for_select(SchoolClass.all.collect{|m| [m.class_name, m.class_name]}, :selected => @class.blank? ? "" : @class.class_name), :class => 'form-control', prompt: "--Select--"  %>
					<br />
	        <%= submit_tag "View", :name => nil, :class => "btn btn-info", id: "find_time_table" %>
				<% end %>
				<%#=hidden_field_tag "period_id", @class.id%>
      </div>
    </div>
  	
    <div id="time_table_subjects">
	    <%= render partial: "time_table" %>
		</div>
	</div>
</div> 
