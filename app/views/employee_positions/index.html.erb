<h1>Employee Positions</h1>


<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class= "table table-striped table-bordered table-hover ">
        <thead >
          <tr>
            <th class="col-sm-2">Name</th>
            <th colspan="3" align="center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @employee_positions.each do |employee_position| %>
            <tr>
              <td><%= employee_position.name %></td>
              <td><%= link_to 'Show', employee_position %></td>
              <td><%= link_to 'Edit', edit_employee_position_path(employee_position) %></td>
              <td><%= link_to 'Destroy', employee_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Employee position', new_employee_position_path, class: "btn btn-app" %>

