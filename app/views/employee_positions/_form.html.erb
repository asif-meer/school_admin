<%= simple_form_for(@employee_position) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :name, input_html: {class: "form-control"}, autofocus: true, placeholder: "Position" %>
  </div>

  <div class="form-group"></div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  
  <div class="form-group"></div>
    
<% end %>

