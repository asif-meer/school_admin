<fieldset>
  <%= simple_form_for @fees_category, class: "form-horizontal" do |f| %>
    <%= yield f %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, input_html: {class: "form-control"}, autofocus: true, placeholder: "Category Name" %>
    </div>

    <div class="form-group"></div>

    <div class="form-inputs">
      <%= f.input :description, input_html: {class: "form-control"}, placeholder: "Description" %>

    <div class="form-group"></div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
    
    <div class="form-group"></div>
  <% end %>
</fieldset>

